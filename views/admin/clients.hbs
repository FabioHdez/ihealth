{{> admin/_navbar}}
{{> admin/_settings-panel}}
{{> admin/_sidebar}}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="table-responsive  mt-1">
    <table class="table table-striped table-hover">
      <button type="button" class="btn btn-success" onclick ="location.href = 'clients/create'" >Add Client</button>
      <thead>
        <tr class="">
          <th>Full Name</th>
          <th>Email</th>
          <th>Phone</th>
          {{#if admin}}<th>Employee Assigned</th>{{/if}}
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        {{#each clients}}
        <tr>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{phone}}</td>
          {{#if ../admin}}<td><a href="#">{{employeeName}}</a></td>{{/if}}
          <td><button type="button" class="btn btn-success">Edit</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  </div>
  {{> admin/_footer}}
</div>
