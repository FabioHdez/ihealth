{{> admin/_navbar}}
{{> admin/_settings-panel}}
{{> admin/_sidebar}}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Appointments</h4>
                  <p class="card-description">
                    List of your appointments for this month
                  </p>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <button type="button" class="btn btn-success" onclick ="location.href = '/admin/appointments/create'" >Create Appointment</button>
                      <thead>
                        <tr>
                          <th>Date</th>
                          <th>Client</th>
                          <th>Title</th>
                          <th>Status</th>
                          <th>View</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>6-17-2022</td>
                          <td>Chris Sanchez</td>
                          <td>Ear inspection</td>
                          <td><label class="badge badge-danger">Rescheduled</label></td>
                          <td><button type="button" class="btn btn-success" onclick ="location.href = 'appointments/{{_id}}'">Edit</button></td>
                        </tr>
                        <tr>
                          <td>6-18-2022</td>
                          <td>Juanmi Sanchez</td>
                          <td>Yearly checkup</td>
                          <td><label class="badge badge-warning">In progress</label></td>
                          <td><button type="button" class="btn btn-success" onclick ="location.href = 'appointments/{{_id}}'">Edit</button></td>
                        </tr>
                        <tr>
                          <td>6-18-2022</td>
                          <td>Lazaro Rodriguez</td>
                          <td>Psychological tests</td>
                          <td><label class="badge badge-success">Completed</label></td>
                          <td><button type="button" class="btn btn-success" onclick ="location.href = 'appointments/{{_id}}'">Edit</button></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
      </div>
  </div>
  {{> admin/_footer}}
</div>
