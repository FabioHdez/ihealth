{{> admin/_navbar}}
{{> admin/_settings-panel}}
{{> admin/_sidebar}}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="table-responsive  mt-1">
    <table class="table table-striped table-hover">
      <button type="button" class="btn btn-info" onclick ="location.href = 'employees/create'" >Add employee</button>
      <thead>
        <tr class="">
          <th>Name</th>
          <th>Username</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        {{#each employees}}
        <tr>
          <td>{{name}}</td>
          <td>{{username}}</td>
          <td>{{email}}</td>
          <td>{{phone}}</td>

          <td><button type="button" class="btn btn-info">Edit</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

  {{> admin/_footer}}
</div>
